const int LED[4] = { 8, 9, 10, 11 };

void setup() {
  for (int i = 0; i < sizeof(LED) / sizeof(int); i++) {
    pinMode(LED[i], OUTPUT);  // 13번 핀을 OUTPUT으로 설정함
  }
}

void loop() {
  for (int i = 0; i < sizeof(LED) / sizeof(int); i++) {
    for (int j = 0; j < 999; j++) {
      digitalWrite(LED[i], HIGH);
      delayMicroseconds(1 + j);
      digitalWrite(LED[i], LOW);
      delayMicroseconds(999 - j);
    }
  }
}
